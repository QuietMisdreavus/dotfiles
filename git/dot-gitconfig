[core]
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
	algorithm = histogram
        wordregex = ([[:alpha:]][[:lower:][:digit:]]*|[[:punct:]]|[[:upper:]][[:upper:][:digit:]]*|[[:digit:]]+)
[difftool]
	prompt = true
	trustExitCode = true
[mergetool]
	trustExitCode = true
[submodule]
	recurse = true
[alias]
	rclone = clone --recursive
[fetch]
	prune = true
	pruneTags = true
[help]
	autoCorrect = 30
[pull]
	rebase = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[init]
	defaultBranch = main
